@model CheeseMVC.ViewModels.AddCheeseViewModel

<h1>Add Cheese</h1>

<form asp-controller="Cheese" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    

    <div class="form-group">
        <input type="hidden" class="form-control" asp-for="CategoryID" value="1" />
    </div>


    <label>Category</label><br />
    <select id="mySelect" onchange="myFunction()">

        @foreach (SelectListItem item in Model.Categories)
        {
            <option value="@item.Value">@item.Text</option>
        }
    </select>


    <script>
        function myFunction() {
            var x = document.getElementById("mySelect").value;

            CategoryID.value = x;
        }
    </script>


    <input type="submit" value="Add Cheese" />

</form>




